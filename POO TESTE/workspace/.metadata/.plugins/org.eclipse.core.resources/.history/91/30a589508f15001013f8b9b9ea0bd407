package src;

public class teste {


	public static void main(String[] args) {
		int numero = new Random().nextInt(100);
		int numeroChute;
		int contador = 1;
		Scanner scanner = new Scanner(System.in);

		System.out.println("Jogo de adivinhação\n___________________");
		System.out.println(
				"Digite um número aleatório de 0 a 100 (apenas números inteiros)\nVocê possuí cinco tentativas!");

		do {

			do {

				while (!scanner.hasNextInt()) {
					System.out.println("O número escolhido deve ser inteiro. Digite novamente: ");
					scanner.next();
				}

				numeroChute = scanner.nextInt();

				if (numeroChute < 0 || numeroChute > 100) {
					System.out.println("O número escolhido deve ser entre 0 e 100. Digite novamente: ");
				}

			} while (numeroChute < 0 || numeroChute > 100);

//			 System.out.println(numero);

			if (numeroChute < numero && contador <= 4) {
				System.out.println("O número é maior que " + numeroChute + " Digite novamente");
			} else if (numeroChute > numero && contador <= 4) {
				System.out.println("O número é menor que " + numeroChute + " Digite novamente");
			} else if (numeroChute == numero && contador <= 4) {
				System.out.println("Número correto! Você ganhou. O programa será encerrado");
				break;
			}

			contador++;

		} while (numero != numeroChute && contador <= 5);

		if (numero != numeroChute) {
			System.out.println("Acabaram as tentativas. O número correto era " + numero);
		}
	}

}
