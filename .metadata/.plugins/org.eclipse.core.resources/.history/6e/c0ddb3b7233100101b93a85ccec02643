package telas;

import javax.swing.JTextField;
import javax.swing.text.Document;

public class DJTextField extends JTextField {
	private String vlrPadrao;
	
	
	public String getVlrPadrao() {
		return vlrPadrao;
	}

	public void setVlrPadrao(String vlrPadrao) {
		this.vlrPadrao = vlrPadrao;
	}
	
	public DJTextField() {
		super();
		// TODO Auto-generated constructor stub
	}

	public DJTextField(Document doc, String text, int columns) {
		super(doc, text, columns);
		// TODO Auto-generated constructor stub
	}

	public DJTextField(int columns) {
		super(columns);
		// TODO Auto-generated constructor stub
	}

	public DJTextField(String text, int columns) {
		super(text, columns);
		// TODO Auto-generated constructor stub
	}

	public DJTextField(String text) {
		super(text);
		vlrPadrao = text;
		// TODO Auto-generated constructor stub
	}

	public void setTxPadrao() {
		this.setText(vlrPadrao);
	}
}
